{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitOverride": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "config",
        "lib",
        "node_modules"
    ]
}